<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="lang"
            type="String" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".uis.activity_home.HomeActivity"

        >

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:openDrawer="end"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/consData"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.appbar.AppBarLayout
                        android:id="@+id/appBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.Toolbar
                            android:id="@+id/toolBar"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:background="@color/white"
                            app:layout_scrollFlags="scroll|enterAlways|snap">


                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="end"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_search"
                                android:visibility="gone"

                                />

                            <ImageView
                                android:id="@+id/imgNotification"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="end"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:src="@drawable/ic_notification"

                                />


                        </androidx.appcompat.widget.Toolbar>                    </com.google.android.material.appbar.AppBarLayout>

                    <fragment
                        android:id="@+id/navHostFragment"
                        android:name="androidx.navigation.fragment.NavHostFragment"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:defaultNavHost="true"
                        app:navGraph="@navigation/nav_graph" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/navView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                app:elevation="0dp"
                 >
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="110dp"
                            app:cardCornerRadius="15dp"
                            android:layout_margin="10dp"
                            app:cardBackgroundColor="@color/gray3">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="5dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:src="@drawable/img_nav"
                                    />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="3dp"
                                    android:orientation="vertical">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_horizontal">
                                        <ImageView
                                            android:layout_width="24dp"
                                            android:layout_height="24dp"
                                            android:src="@drawable/ic_hi"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Hi"
                                            android:textSize="15sp"
                                            android:textColor="@color/gray4"
                                            android:layout_marginStart="5dp"/>
                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Mohamedd"
                                        android:textSize="18sp"
                                        android:layout_marginTop="10dp"
                                        android:textColor="@color/black2"/>
                                </LinearLayout>
                                <ImageView
                                    android:id="@+id/logOut"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_logout"
                                    android:layout_gravity="end"
                                    android:layout_marginStart="30dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:id="@+id/home"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"

                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_home"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/home"
                                android:textSize="18sp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:layout_margin="5dp"
                            />
                        <LinearLayout
                            android:id="@+id/myOrders"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"

                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_orders"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/myOrders"
                                android:textSize="18sp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:layout_margin="5dp"
                            />
                        <LinearLayout
                            android:id="@+id/favourite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"

                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_favourite"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/favourite"
                                android:textSize="18sp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:layout_margin="5dp"
                            />
                        <LinearLayout
                            android:id="@+id/cart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"

                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_cart"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/cart"
                                android:textSize="18sp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:layout_margin="5dp"
                            />
                        <LinearLayout
                            android:id="@+id/editAcc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"

                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_edit_acc"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/edit_profile"
                                android:textSize="18sp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:layout_margin="5dp"
                            />
                        <LinearLayout
                            android:id="@+id/wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"

                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                               />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/wallet"
                                android:textSize="18sp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:layout_margin="5dp"
                            />
                        <LinearLayout
                            android:id="@+id/shareApp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"

                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_share"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/share"
                                android:textSize="18sp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@drawable/horizontal_line"
                            android:layerType="software"
                            android:layout_margin="5dp"
                            />
                        <LinearLayout
                            android:id="@+id/contactUs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"

                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_contact_us"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/contact_us"
                                android:textSize="18sp"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"/>
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

            </com.google.android.material.navigation.NavigationView>

        </androidx.drawerlayout.widget.DrawerLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>

